<table class="table table-striped">
  <tbody>
    <% @albums.each_slice(4) do |row| %>
        <tr>
            <% row.each do |album| %>
              <td>
                <%= link_to image_tag(album.image.thumb), user_user_album_path(@user,album) %>
                <br>
                <%= album.name %>
              </td>
            <% end %>
        </tr>
    <% end %>
  </tbody>
</table>


